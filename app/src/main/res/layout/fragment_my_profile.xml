<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bricenangue.insyconn.e_workers.fragment.MyProfileFragment">


    <ImageView
        android:id="@+id/imageView_Fragment_Profile_Header"
        android:layout_width="0dp"
        android:layout_height="181dp"
        android:scaleType="centerCrop"
        android:src="@drawable/brice"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/insyconn_logo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Fragment_Profile_Header"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Fragment_Profile_Header" />

    <TextView
        android:id="@+id/textView_Fragment_Profile_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Mustermann"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Fragment_Profile_Header" />
</android.support.constraint.ConstraintLayout>
